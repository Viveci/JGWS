package connection;

import java.io.IOException;
import java.io.InputStream;
import java.io.ObjectInputStream;
import java.net.Socket;
import java.text.SimpleDateFormat;
import java.util.Calendar;
import java.util.Scanner;

public class ClientListener implements Runnable{

   private ObjectInputStream inFromServer;

   public ClientListener(Socket sock){
      System.out.println("ClientListener: constructor");
      try {
         //Scanner dataFromServer = new Scanner(sock.getInputStream());
         inFromServer = new ObjectInputStream(sock.getInputStream());
         System.out.println("ClientListener: ObjectInputStream");
      }
      catch (IOException e) {
         e.printStackTrace();
      }
   }

   public void run() {
      System.out.println("ClientListener: Running..");
      try {
         String temp =(String) inFromServer.readObject();
      }
      catch (ClassNotFoundException e) {
         // TODO Auto-generated catch block
         e.printStackTrace();
      }
      catch (IOException e) {
         // TODO Auto-generated catch block
         e.printStackTrace();
      }
   }

}
