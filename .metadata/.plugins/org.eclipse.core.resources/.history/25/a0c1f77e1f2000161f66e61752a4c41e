package view;

import java.awt.Color;
import java.awt.Component;

import javax.swing.JLabel;
import javax.swing.JList;
import javax.swing.JPanel;
import javax.swing.ListCellRenderer;

import model.Booking;
import javax.swing.JTextPane;

public class BookingCellRenderer extends JPanel implements ListCellRenderer {
   private static final Color HIGHLIGHT_COLOR = new Color(0, 0, 128);
   
   private JLabel eventName;
   private JTextPane eventDesc;
   private JLabel eventDate;
   private JLabel eventInterval;
   
   public BookingCellRenderer() {
     setBounds(0, 0, 390, 90);
     setOpaque(true);
     setLayout(null);
     
     JLabel eventName = new JLabel("Event name");
     eventName.setBounds(10, 10, 250, 20);
     add(eventName);
     
     JTextPane eventDesc = new JTextPane();
     eventDesc.setBounds(10, 40, 250, 40);
     add(eventDesc);
     
     JLabel eventDate = new JLabel("New label");
     eventDate.setBounds(270, 40, 110, 14);
     add(eventDate);
     
     JLabel eventInterval = new JLabel("New label");
     eventInterval.setBounds(270, 66, 110, 14);
     add(eventInterval);
   }

   public Component getListCellRendererComponent(JList list, Object value,
       int index, boolean isSelected, boolean cellHasFocus) {
     Booking entry = (Booking) value;
     eventName.setText(entry.getBookingID()+"");
     eventDate.setText("2016/01/01");
     eventInterval.setText("18:00-20:00");
     if (isSelected) {
       setBackground(HIGHLIGHT_COLOR);
       setForeground(Color.white);
     } else {
       setBackground(Color.white);
       setForeground(Color.black);
     }
     return this;
   }

   public void setEventName(JLabel eventName) {
      this.eventName = eventName;
   }

   public void setEventDesc(JTextPane eventDesc) {
      this.eventDesc = eventDesc;
   }

   public void setEventDate(JLabel eventDate) {
      this.eventDate = eventDate;
   }

   public void setEventInterval(JLabel eventInterval) {
      this.eventInterval = eventInterval;
   }

   public static Color getHighlightColor() {
      return HIGHLIGHT_COLOR;
   }

   public JLabel getEventName() {
      return eventName;
   }

   public JTextPane getEventDesc() {
      return eventDesc;
   }

   public JLabel getEventDate() {
      return eventDate;
   }

   public JLabel getEventInterval() {
      return eventInterval;
   }
   
   
   
 }