package controller;

import connection.Client;
import model.mediator.Model;
import view.View;

public class ClientController implements Controller {

   private View view;
   private Client client;
   private String msg;
   
   //Constructors
   public ClientController(View view, Client client){
      this.view = view;
      this.client = client;
   }

   @Override
   public String execute(String what) {
      return what;
   }
   
   public boolean auth(String input){
      boolean rtrn = false;
      client.send(input);
      if(msg.equals("need for speed")){
         rtrn = true;
      }
      return rtrn;
   }
   
   public void add(String msg){
      this.msg = msg;
   }
}
