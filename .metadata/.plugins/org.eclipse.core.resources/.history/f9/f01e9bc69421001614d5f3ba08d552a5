import java.io.*;

public class Client implements Runnable {
   
   private Socket socket;
   private String list;
   private Scanner dataFromServer;
   
   private OutputStream outputStream = socket.getOutputStream();
   private ObjectOutputStream out = new ObjectOutputStream(outputStream);
      
   public static String getTime() {
      return new SimpleDateFormat("HH:mm:ss").format(Calendar.getInstance()
            .getTime());
   }
   
   public Object[] msgServer(String querry){
      Object[] rtrn = null;
      return rtrn;
   }
   
   public void ping(String msg){
      
   }

   @Override
   public void run() {
      try {
         socket = new Socket("localhost", 6006);
         list = "";
         dataFromServer = new Scanner(socket.getInputStream());
         
         OutputStream outputStream = socket.getOutputStream();
         ObjectOutputStream out = new ObjectOutputStream(outputStream);
         
         Scanner sc = new Scanner(System.in);
         String output = "open";       
         
         while(!output.equalsIgnoreCase("no")){
            System.out.println("<Type your message>");
            output = sc.nextLine();
            out.writeObject(output);            
         }
         
         out.writeObject("exit");
         
         list = dataFromServer.nextLine();
         System.out.println(list);
         list = dataFromServer.nextLine();
         System.out.println(list);
         
      } catch (Exception e) {
         System.out.println(e);
      }
   }
   
   
   
