package search;

public class Dictionary
{

   public Dictionary()
   {

   }

   public static int binarySearch(int x, int[] sortedArray)
   {
      boolean found = true;
      if (sortedArray.length == 0)
      {
         throw new IllegalArgumentException();
      }
      int rtrn = -1, left = 0, right = (sortedArray.length - 1), middle;
      while (left <= right)
      {
         middle = (left + right) / 2;
         if (sortedArray[middle] == x)
         {
            rtrn = middle;
         }
         else if (x > sortedArray[middle])
         {
            System.out.println("left" + sortedArray[middle]);
            left = middle + 1;
         }
         else
         {
            right = middle - 1;
         }
      }
      return rtrn;
   }

   public static int binarySearch(int x, int[] sortedArray, int left, int right)
   {
      if (left > right){
         return -1;
      }
      int middle = (left + right) / 2;
      if (x == sortedArray[middle]){
         return middle;
      }
      if (x > sortedArray[middle]){
         left = middle + 1;
      }
      else{
         right = middle - 1;
      }
      return binarySearch(x, sortedArray, left, right);
   }
}
